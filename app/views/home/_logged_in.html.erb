<%= turbo_stream_from my_room_list_stream %> <%# "#{current_user.id}_rooms"%>

<div class="row p-3">
  <aside class="col-md-4" style="height: 200px;">
    <section class="user_info card p-3 d-flex flex-row">
      <div class="card-img-div">
        <%= render_user_icon(current_user) %>
      </div>
      <div class="card-body">
        <h2><%= current_user.username %></h2>
        <%= link_to "view my profile", current_user %>
        <br>
        <%= link_to friendships_path do %>
          <%= pluralize(current_user.friends.count, "friend") %>
        <% end %>
      </div>
    </section>
  </aside>
  <div class="col-md-8">
    <h1 class="d-flex justify-content-between m-0">
      Rooms
      <%= link_to new_room_path do %>
        <i class="bi bi-plus"></i>
      <% end %>
    </h1>
    <%= turbo_frame_tag my_room_list_stream do %>
      <%= render @rooms %>
    <% end %>
  </div>
</div>

