{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Attach to Rails Server",
      "type": "rdbg",
      "request": "attach",
      "debugPort": "12345",
      "rdbgPath": "bundle exec rdbg",
    },
    {
      "type": "rdbg",
      "name": "Run rails server",
      "rdbgPath": "bundle exec rdbg",
      "request": "launch",
      "command": "bin/rails",
      "script": "s",
      "args": ["-p","3000","-b","'0.0.0.0'"],
      "askParameters": false
    }
  ]
}
